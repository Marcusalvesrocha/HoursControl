<p id="notice"><%= notice %></p>

<h1>Funcionários</h1>

<table class="table  table-bordered table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th>Função</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.age %></td>
        <td><%= employee.user.function %></td>
        <td><%= link_to 'Mostrar', employee %></td>
        <td><%= link_to 'Editar', edit_employee_path(employee) %></td>
        <td><%= link_to 'Excluir', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar', new_employee_path, class: "btn btn-dark" %>
