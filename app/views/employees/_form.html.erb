<%= form_with(model: employee, local: true) do |form| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
        <% employee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>


  <%= form.fields_for :user do |use| %>

    <div class="field">
      <%= use.label :email %>
      <%= use.text_field :email %><br>
    </div>

    <div class="field">
      <%= use.label :function %>
      <%= use.text_field :function %><br>
    </div>

    <div class="field">
      <%= use.label :password %>
      <%= use.text_field :password %><br>
    </div>

    <div class="field">
      <%= use.label :password_confirmation %>
      <%= use.text_field :password_confirmation %><br>
    </div>

  <%end%>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
